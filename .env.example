# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Authentication
# A autenticação é feita via UUID do usuário + hash SHA-256 do email
# Não é necessário configurar segredos JWT
# O app principal deve redirecionar com: ?userId=UUID&emailHash=SHA256_HASH

# Stripe
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Stripe Webhook Secret
# Get this from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (from your Stripe Product Catalog)
# Individual Plan: 15 patients, 1 member - R$97/month
NEXT_PUBLIC_STRIPE_PRICE_INDIVIDUAL=price_individual_id

# Fono+ Plan: 30 patients, 3 members - R$197/month
NEXT_PUBLIC_STRIPE_PRICE_FONO_PLUS=price_fono_plus_id

# Pro Plan: Unlimited patients, unlimited members - R$397/month
NEXT_PUBLIC_STRIPE_PRICE_PRO=price_pro_id

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
